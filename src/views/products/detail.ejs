<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title:product.name});%>

    <body>
        <%- include('../partials/header');%>
            <main>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li>

                        <a href="<%=product.category.name%> ">
                            <%=product.category.name%>
                        </a>
                    </li>
                    <li>Detalle</li>

                </ul>
                <form action="./cart" method="POST">
                    <div class="main-container-product">
                        <div class="rowimages">
                            <div class="column">
                                <% if(product.image) {%>
                                    <% if(product.image[1]) { %>
                                        <img src="../images/products/<%=product.category%>/<%=product.image[1].filename%>">
                                        <%  } %>
                                            <% if(product.image[2]) { %>
                                                <img src="../images/products/<%=product.category%>/<%=product.image[2].filename%>">
                                                <%  } %>
                            </div>
                            <div class="column">
                                <% if(product.image[3]) { %>
                                    <img src="../images/products/<%=product.category%>/<%=product.image[3].filename%>">
                                    <%  } %>
                                        <% if(product.image[4]) { %>
                                            <img src="../images/products/<%=product.category%>/<%=product.image[4].filename%>">
                                            <%  } %>
                            </div>

                        </div>





                        <div class="main-product">

                            <img src="../images/products/<%=product.category%>/<%=product.image[0].filename%>">

                        </div>
                        <% } %>
                            <div class="details-products">
                                <h3>
                                    <%=product.name %>
                                </h3>
                                <span><%=toThousand(product.price) %></span>
                                <br>

                                <label for="description">Descripcion:</label>
                                <p>
                                    <%= product.description %>
                                </p>

                                <%if(product.category == 'indumentaria'){ %>
                                    <label for="cantidad">Tama√±o:</label>
                                    <select type="text" name="size" id="size">
                                <option value="xs">XS</option>
                                <option value="s">S</option>
                                <option value="m">M</option>
                                <option value="l">L</option>
                                <option value="xl">XL</option>
                                </select>
                                    <%      }  %>


                                        <button type="submit">Agregar al carrito</button>
                            </div>
                    </div>
                </form>
                <% if(locals.user && user.category == 1){ %>
                    <!-- category 1 lo defini como si fuera el administrador.-->

                    <div class="detail-editanddelete">
                        <a href="/products/<%=product.id%>/edit ">Editar</a>
                        <form action="/products/<%=product && product.id%>?_method=DELETE" method="POST">
                            <button type="submit">Eliminar</button>
                        </form>
                    </div>
                    <%  } %>

            </main>
            <%- include('../partials/footer'); %>
                <script src="../js/menu.js"></script>
                <script src="../js/productDetail.js"></script>

    </body>

</html>