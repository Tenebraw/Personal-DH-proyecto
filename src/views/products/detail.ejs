<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title:product.name});%>

    <body>
        <%- include('../partials/header');%>
            <main>
                <div class="main-container-product">
                    <div class="main-product">
                        <img src="../images/products/<%=product.category%>/<%=product.image %>">
                    </div>
                    <div class="details-products">
                        <h3>
                            <%=product.name %>
                        </h3>
                        <span><%=toThousand(product.price) %></span>
                        <br>

                        <label for="description">Descripcion:</label>
                        <p>
                            <%= product.description %>
                        </p>
                        <label for="cantidad">Cantidad:</label>
                        <input type="number" id="cantidad" min="1" max="10">
                        <button>Agregar al carrito</button>
                        <div class="detail-editanddelete">
                            <a href="/products/<%=product.id%>/edit ">Editar</a>
                            <form action="/products/<%=product && product.id%>?_method=DELETE" method="POST">
                                <button type="submit">Eliminar</button>
                            </form>
                        </div>
                    </div>

                </div>

            </main>
            <%- include('../partials/footer'); %>
                <script src="../js/menu.js"></script>
                <script src="../js/productDetail.js"></script>

    </body>

</html>