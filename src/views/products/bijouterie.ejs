<!DOCTYPE html>
<html class="bijouterie" lang="en">
<%- include('../partials/head');%>

    <body>
        <%- include('../partials/header');%>
            <main>
                <ul class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li>Bijouterie</li>

                </ul>
                <section>
                    <div class="product-bijoux">
                        <div class="barr">
                            <div class="stable">
                                <span>Bijouterie</span>
                            </div>
                            <div class="moving">
                                <span><p>Anillos, aros, brazaletes, collares.</p></span>
                            </div>
                        </div>
                        <div class="bijoux-container">
                            <% for(let i = 0;i<products.length;i++) { %>
                                <% if(products[i].category_id =="3") {%>
                                    <article class="myBijouxSlides fade">
                                        <a href="/products/<%= products[i].id  %> ">
                                <img src="/images/products/bijouterie/<%= products[i].image %> ">
                                <span class="bijoux-detail"><%= products[i].name %> </span>
                                <span class="bijoux-price"><%= products[i].price %> </span>
                                <button class="bijouxbutton">Agregar al carrito</button>
                            </a>
                                    </article>
                                    <%  } %>
                                        <% } %>

                                            <a class="prev" onclick="bijouxplusSlides(-1)">&#10094;</a>
                                            <a class="next" onclick="bijouxplusSlides(1)">&#10095;</a>
                        </div>
                    </div>
                    <div class="interludio">

                    </div>
                </section>

            </main>
            <%- include('../partials/footer'); %>
                <script src="../../js/menu.js"></script>
    </body>

</html>