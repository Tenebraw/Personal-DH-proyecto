<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title:locals.user.first_name});%>

    <body>
        <%- include('../partials/header');%>
            <main>
                <div class="main-container-product">
                    <div class="details-products">

                        <h3>
                            Nombre y Apellido:
                        </h3>
                        <p>
                            <%= locals.user.first_name %>
                                <%= locals.user.last_name %>
                        </p>
                        <br>
                        <h3>E-mail:</h3>
                        <p>
                            <%= locals.user.email %>

                        </p>


                    </div>

                </div>
                <div class="detail-editanddelete">
                    <a href="/users/<%=locals.user.id%>/edit ">Editar</a>
                    <form action="/users/<%=user && user.id%>?_method=DELETE" method="POST">
                        <button type="submit">Eliminar</button>
                    </form>
                </div>

            </main>
            <%- include('../partials/footer'); %>
                <script src="../js/menu.js"></script>
                <script src="../js/productDetail.js"></script>

    </body>

</html>